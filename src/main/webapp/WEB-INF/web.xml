<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetProdutos</servlet-name>
        <servlet-class>Servlet.GetProdutos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostProdutos</servlet-name>
        <servlet-class>Servlet.PostProdutos</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>GetProduto</servlet-name>
        <servlet-class>Servlet.GetProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarProduto</servlet-name>
        <servlet-class>Servlet.AlterarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduto</servlet-name>
        <servlet-class>Servlet.DeleteProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Principal</servlet-name>
        <servlet-class>Servlet.Principal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoSelecionado</servlet-name>
        <servlet-class>Servlet.ProdutoSelecionado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadImagens</servlet-name>
        <servlet-class>Servlet.UploadImagens</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToggleProduto</servlet-name>
        <servlet-class>Servlet.ToggleProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarUsuario</servlet-name>
        <servlet-class>Servlet.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUsuarios</servlet-name>
        <servlet-class>Servlet.GetUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProdutos</servlet-name>
        <url-pattern>/GetProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostProdutos</servlet-name>
        <url-pattern>/PostProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProduto</servlet-name>
        <url-pattern>/GetProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarProduto</servlet-name>
        <url-pattern>/AlterarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduto</servlet-name>
        <url-pattern>/DeleteProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Principal</servlet-name>
        <url-pattern>/Principal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoSelecionado</servlet-name>
        <url-pattern>/ProdutoSelecionado</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>UploadImagens</servlet-name>
        <url-pattern>/UploadImagens</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToggleProduto</servlet-name>
        <url-pattern>/ToggleProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarUsuario</servlet-name>
        <url-pattern>/CadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUsuarios</servlet-name>
        <url-pattern>/GetUsuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
